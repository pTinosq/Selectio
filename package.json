{
  "name": "selectio",
  "displayName": "Selectio",
  "description": "Rapidly select text between your cursor and the next character",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.startSelectioTypeMode",
        "title": "Start Selectio Type Mode"
      },
      {
        "command": "extension.exitSelectioTypeMode",
        "title": "Exit Selectio Type Mode"
      },
      {
        "command": "extension.confirmSelectioTypeMode",
        "title": "Confirm Selectio Type Mode"
      }
    ],
    "keybindings": [
      {
        "command": "extension.startSelectioTypeMode",
        "key": "ctrl+k ctrl+;",
        "when": "editorTextFocus"
      },
      {
        "key": "Escape",
        "command": "extension.exitSelectioTypeMode",
        "when": "editorTextFocus && selectio.isTypeMode"
      },
      {
        "key": "Enter",
        "command": "extension.confirmSelectioTypeMode",
        "when": "editorTextFocus && selectio.isTypeMode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "eslint": "^9.9.1",
    "typescript": "^5.5.4",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
