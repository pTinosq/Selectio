{
  "name": "selectio",
  "displayName": "Selectio",
  "description": "Rapidly select text between your cursor and the next character",
  "version": "1.0.0",
  "publisher": "pTinosq",
  "engines": {
    "vscode": "^1.93.0"
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/pTinosq/Selectio"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.startSelectioTypeMode",
        "title": "Start Selectio Type Mode"
      },
      {
        "command": "extension.exitSelectioTypeMode",
        "title": "Exit Selectio Type Mode"
      },
      {
        "command": "extension.confirmSelectioTypeMode",
        "title": "Confirm Selectio Type Mode"
      }
    ],
    "keybindings": [
      {
        "command": "extension.startSelectioTypeMode",
        "key": "ctrl+k ctrl+;",
        "when": "editorTextFocus"
      },
      {
        "key": "Escape",
        "command": "extension.exitSelectioTypeMode",
        "when": "editorTextFocus && selectio.isTypeMode"
      },
      {
        "key": "Enter",
        "command": "extension.confirmSelectioTypeMode",
        "when": "editorTextFocus && selectio.isTypeMode"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "format": "biome format --write ./src",
    "lint": "biome lint --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.2",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "typescript": "^5.5.4"
  }
}
